@model EShop.Domain.Models.CarPart
@{
    ViewData["Title"] = "AdminPage";
}


<div class="container text-center mt-5">
    <br />
    <hr />
    <br />
    <div class="d-flex text-center">
        <h4>Export All Car Parts</h4>
        <div class="row ml-3">
            <a class="btn btn-success ms-3" asp-controller="Admin" asp-action="ExportCarParts">Export</a>
        </div>
    </div>

    <br />
    <hr />
    <br />
     <div class="d-flex text-center">
     <h4>Export All Users</h4>
        <div class="row ml-3" >
            <a class="btn btn-success ms-3" asp-controller="Admin" asp-action="ExportUsers">Export</a>
        </div>
    </div>
   

    <br />
    <hr />
    <br />
    <div class="d-flex">
        <h4 class="text-left mr-5">Import Users from Excel File</h4>
        <form asp-controller="Admin" asp-action="ImportUsers" method="post" enctype="multipart/form-data" class="w-50
              ">
            <div class="form-group d-flex">
                <input type="file" name="file" class="form-control w-100 mr-5" />
                <button type="submit" class="btn btn-success ms-1">Import</button>
            </div>
        </form>
    </div>

    <br />
    <hr />
    <br />
    <div class="d-flex">
        <h4 class="text-left mr-5">Import Car Parts from Excel File</h4>
        <form asp-controller="Admin" asp-action="ImportCarParts" method="post" enctype="multipart/form-data" class="w-50">
            <div class="form-group d-flex">
                <input type="file" name="file" class="form-control w-100 mr-5" />
                <button type="submit" class="btn btn-success ms-1">Import</button>
            </div>
        </form>
    </div>


    <br />
    <hr />
    <br />
</div>